    <script>
        createNewVerson.onchange = function(e) {
            var files = this.files;
            var table = {};

            for (var i = 0; i < files.length; i++) {
                var f = files[i];
                var dt = new Date(f.lastModified);

                table[i] = {
                    path: f.webkitRelativePath,
                    size: f.size,
                    modified: dt.toLocaleString()
                };
            }

            console.table(table);
        };
    </script>
