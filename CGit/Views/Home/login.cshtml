@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/html">
<head>
    <meta charset="UTF-8">
    <title>CGit</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link href="~/css/login.css" rel="stylesheet" type="text/css" media="all" />
</head>
<body>
    <div class="container">
        <div class="row clearfix">
            <!--顶部导航栏开始-->
            <div class="col-md-12 column">
                <nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">
                    <div class="navbar-header" style="width: 150px">
                        <a href="/Home/index"><img src="/img/logo.png" height="50px" /></a>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <!--class="active"-->
                            <li>
                                <a href="#">活跃用户</a>
                            </li>
                            <li>
                                <a href="~/User/frame">热门项目</a>
                            </li>
                        </ul>
                        <form class="navbar-form navbar-left" role="search">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="要搜索的项目，用户..." />
                            </div>
                            <button type="submit" class="btn btn-default">搜索</button>
                        </form>
                        <ul class="nav navbar-nav navbar-right" style="margin-right: 10px;">
                            <li>
                                <a href="~/Home/register">注册</a>
                            </li>
                            <li>
                                <a href="~/Home/login">登录</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <!--顶部导航栏结束-->
        </div>
    </div>
    <div class="login">
        <h2>用户登录</h2>
        <div class="login-top">
            <h1><a href="/Home/index"> <img src="/img/logo.png" height="60" width="156" /></a></h1>
            <form action="/Home/doLogin" method="post">
                <input type="text" name="email" placeholder="请输入要登录的账号...">
                <input type="password" name="pwd"placeholder="请输入密码...">
                <div class="forgot">
                    <strong style="color:red;margin-right:5px">@ViewData["msg"]</strong>
                    <a href="/Home/findPwd">忘记密码</a>
                    <input type="submit" value="登录">
                </div>
            </form>
        </div>
        <div class="login-bottom">
            <h3>新用户 &nbsp;<a href="~/Home/register">注册</a>&nbsp Here</h3>
        </div>
    </div>
    <script src="~/js/jquery-3.1.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>  